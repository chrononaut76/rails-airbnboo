<div class="container">
  <h1><%= @location.name %></h1>
  <div class="card">
    <%= image_tag @location.image_url, class: "card-img-top", style: "max-width: 300px" %>
    <p><strong>Address:</strong> <%= @location.address %></p>
    <p><strong>Description:</strong> <%= @location.description %></p>
    <p><strong>Price:</strong> <%= @location.price %></p>

    <% if user_signed_in? && @pending_booking.present? %>
      <p><%= @pending_booking.status.upcase %></p>
    <% else %>
    <div data-controller="toggle">
      <button class="btn btn-primary mt-4" data-action="click->toggle#fire">Book!</button>
      <div class="mt-3 d-none" data-toggle-target="toggleableElement">
        <%= render 'bookings/form', booking: @booking, location: @location %>
      </div>
    </div>
    <% end %>
  </div>
</div>
