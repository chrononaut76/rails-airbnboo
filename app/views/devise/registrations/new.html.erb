<div class="form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-5">
      <h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label_html: { class: "form-text"},
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :first_name, label_html: { class: "form-text"},
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first-name" }%>
    <%= f.input :last_name, label_html: { class: "form-text"},
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last-name" }%>
    <%= f.input :password, label_html: { class: "form-text"},
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "form-text" } %>
    <%= f.input :password_confirmation, label_html: { class: "form-text"},
                required: true,
                input_html: { autocomplete: "new-password", class: "form-text" } %>
    <%= f.input :is_host, label_html: { class: "form-text"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "form-text" "btn" %>
  </div>
<% end %>

