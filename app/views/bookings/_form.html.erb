<%= simple_form_for([ @location, @booking ]) do |f| %>
  <% if current_user.present? && current_user.is_host? %>
    <%= f.input "Accept" %>
    <%= f.input "Reject" %>
  <% else %>
    <%= f.submit "Book my stay" %>
  <% end %>
<% end %>

